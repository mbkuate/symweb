{% extends "base.html.twig" %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}
<!-- Hero Start -->
<section class="bg-half-170 d-table w-100" style="background: url('{{ ad.coverImage }}') center center;">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="pages-heading">
                    <h2 class="title text-white title-dark mb-0">{{ ad.title }}
                        <span class="btn btn-primary btn-lg">{{ ad.price }} &euro; / night</span>
                    </h2>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <ul class="list-unstyled mt-4 mb-0 position-middle-bottom">
            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-bed-double fs-5 text-white title-dark align-middle"></i>
                <span class="text-white-50 ms-1">{{ ad.rooms }} Beds</span>
            </li>

            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-bath fs-5 text-white title-dark align-middle"></i>
                <span class="text-white-50 ms-1">3 Bathrooms</span>
            </li>
            
            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-restaurant fs-5 text-white title-dark align-middle"></i>
                <span class="text-white-50 ms-1">Restaurant</span>
            </li>
            
            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-wifi fs-5 text-white title-dark align-middle"></i>
                <span class="text-white-50 ms-1">Free WIFI</span>
            </li>
            
            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-dumbbell fs-5 text-white title-dark align-middle"></i>
                <span class="text-white-50 ms-1">Relaxation</span>
            </li>
            
            <li class="align-items-center justify-content-center list-inline-item mx-2">
                <i class="uil uil-shopping-cart fs-5 text-white title-dark align-middle"></i>
                <a href="#!" class="text-white">Books Now</a>
            </li>
        </ul>
        
        <div class="position-breadcrumb">
            <nav aria-label="breadcrumb" class="d-inline-block">
                <ul class="breadcrumb bg-white rounded shadow mb-0 px-4 py-2">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Landrick</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('ads_index') }}">Blog List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Blog Details</li>
                </ul>
            </nav>
        </div>
    </div> <!--end container-->
</section><!--end section-->
<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!-- Hero End -->

<!-- Blog STart -->
<section class="section">
    <div class="container">
        <!-- Dismissing Alert Start -->
        {% for label, messages in app.flashes %}
        <div class="row">
            <div class="col pt-1">
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        <h6 class="mb-0">{{ message | raw }}</h6>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor%}
            </div><!--end col-->
        </div><!--end row-->
        {% endfor%}
        <!-- Dismissing Alert End -->
        <div class="row justify-content-center">
            <!-- BLog Start -->
            <div class="col-md-1 d-none d-md-block">
